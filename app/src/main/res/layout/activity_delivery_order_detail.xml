<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DeliveryOrderDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FFA726"
            android:id="@+id/constraintLayout">

        <TextView
                android:text="货运单号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/textView28"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView28"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView28"
                tools:text="464646"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                tools:text="1件"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView33"
                app:layout_constraintStart_toEndOf="@+id/textView33"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"/>

        <TextView
                android:text="路线："
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/textView28"
                android:gravity="right"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                app:layout_constraintStart_toEndOf="@+id/textView30"
                tools:text="天庭中部---->南海分库天庭中部---->南海分库天庭中部---->南海分库天庭中部---->南海分库天庭中部---->南海分库天庭中部---->南海分库"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView30"
                app:layout_constraintBottom_toBottomOf="@+id/textView30"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@android:color/white"/>

        <TextView
                android:text="运单耗时："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView30"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView30"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"/>

        <TextView
                android:text="运单损耗："
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView32"
                app:layout_constraintEnd_toEndOf="@+id/textView32"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView32"
                app:layout_constraintStart_toEndOf="@+id/textView32"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                tools:text="8小时"
                android:textColor="@android:color/white"/>

        <TextView
                android:text="完成时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView33"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/textView33"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView35"
                app:layout_constraintStart_toEndOf="@+id/textView35"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                tools:text="2019-6-6 10:36:12"
                android:textColor="@android:color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/layout_delivery_order_detail_list_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            />
</androidx.constraintlayout.widget.ConstraintLayout>